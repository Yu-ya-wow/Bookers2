<% if flash[:notice] %>
  <p id="notice">
<%= flash[:notice] %>
  </p>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'users/sidebar',user: @user, book: @book%>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>

            <tr>
              <td>
                <%= link_to user_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %>

                <br><%= @user.name %>
                <% end %>
              </td>

              <td>
                <%= link_to @books.title, book_path(@books.id) %>
              </td>
              <td><%= @books.body %></td>
              <% if @user.id == current_user.id %>
                <td>
                  <%= link_to "Edit", edit_book_path(@books), class:"btn btn-sm btn-success" %>
                </td>
                <td>
                  <%= link_to "Destroy", book_path(@books), class:"btn btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </td>
              <% end %>
            </tr>

        </tbody>
      </table>

    </div>
  </div>
</div>